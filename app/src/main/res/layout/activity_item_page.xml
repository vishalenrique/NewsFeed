<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:id="@+id/activity_item_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.example.com.newsfeed.ItemPage">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Headings"
        tools:text="Needle in the hay: Elliott smith's incomparable brillance lives on"
        android:paddingBottom="@dimen/in_view2"
        />
    <TextView
        android:id="@+id/item_content_show"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
       style="@style/details">
    </TextView>
    <ProgressBar
        android:id="@+id/item_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/empty_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/details"
        tools:text="dssadsda"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>